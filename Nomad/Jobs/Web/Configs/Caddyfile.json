{
  "admin": {
    "listen": "0.0.0.0:2019"
  },
  "storage": {
    "module": "consul",
    "address": "core0.site1.kristianjones.dev:8500",
    "prefix": "caddytls",
    "token": "${Consul.Token}",
    "aes_key": "${Consul.EncryptionKey}"
  },
  "apps": {
    "http": {
      "http_port": 8080,
      "https_port": 8443,
      "servers": {
        "CoreWeb": {
          "listen": [
            ":8443"
          ],
          "automatic_https": {
            "disable": false
          },
          "experimental_http3": false,
          "routes": [
            {
              "match": [
                {
                  "host": [
                    "*.kristianjones.dev"
                  ]
                }
              ],
              "handle": [
                {
                  "handler": "subroute",
                  "routes": [
                    {
                      "match": [
                        {
                          "host": [
                            "bitwarden.kristianjones.dev"
                          ]
                        }
                      ],
                      "handle": [
                        {
                          "handler": "reverse_proxy",
                          "transport": {
                            "protocol": "http"
                          },
                          "upstreams": [
                            {
                              "lookup_srv": "bitwarden-cont.service.kjdev"
                            }
                          ]
                        }
                      ],
                      "terminal": true
                    },
                    {
                      "match": [
                        {
                          "host": [
                            "auth.kristianjones.dev"
                          ]
                        }
                      ],
                      "handle": [
                        {
                          "handler": "reverse_proxy",
                          "transport": {
                            "protocol": "http"
                          },
                          "upstreams": [
                            {
                              "lookup_srv": "authentik-cont.service.kjdev"
                            }
                          ]
                        }
                      ],
                      "terminal": true
                    },
                    {
                      "match": [
                        {
                          "host": [
                            "pomerium.kristianjones.dev"
                          ]
                        }
                      ],
                      "handle": [
                        {
                          "handler": "reverse_proxy",
                          "transport": {
                            "protocol": "http"
                          },
                          "upstreams": [
                            {
                              "lookup_srv": "pomerium-authenticate-cont.service.kjdev"
                            }
                          ]
                        }
                      ],
                      "terminal": true
                    },
                    {
                      "match": [
                        {
                          "host": [
                            "grafana.kristianjones.dev",
                            "netbox.kristianjones.dev",
                            "nextcloud.kristianjones.dev",
                            "mattermost.kristianjones.dev",
                            "chat.kristianjones.dev"
                          ]
                        }
                      ],
                      "handle": [
                        {
                          "handler": "reverse_proxy",
                          "transport": {
                            "protocol": "http"
                          },
                          "upstreams": [
                            {
                              "lookup_srv": "pomerium-proxy-cont.service.kjdev"
                            }
                          ]
                        }
                      ],
                      "terminal": true
                    }
                  ]
                }
              ]
            }
          ]
        },
        "Loki": {
          "listen": [
            ":8080"
          ],
          "automatic_https": {
            "disable": true
          },
          "experimental_http3": false,
          "routes": [
            {
              "match": [
                {
                  "path": [
                    "/loki/api/v1/push",
                    "/ring"
                  ]
                }
              ],
              "handle": [
                {
                  "handler": "reverse_proxy",
                  "transport": {
                    "protocol": "http"
                  },
                  "upstreams": [
                    {
                      "lookup_srv": "loki-distributor-http-cont.service.kjdev"
                    }
                  ]
                }
              ],
              "terminal": true
            },
            {
              "match": [
                {
                  "path": [
                    "/loki/api/v1/tail"
                  ]
                }
              ],
              "handle": [
                {
                  "handler": "reverse_proxy",
                  "transport": {
                    "protocol": "http"
                  },
                  "upstreams": [
                    {
                      "lookup_srv": "loki-querier-http-cont.service.kjdev"
                    }
                  ]
                }
              ],
              "terminal": true
            },
            {
              "match": [
                {
                  "path": [
                    "/loki/api/*"
                  ]
                }
              ],
              "handle": [
                {
                  "handler": "reverse_proxy",
                  "transport": {
                    "protocol": "http"
                  },
                  "upstreams": [
                    {
                      "lookup_srv": "loki-query-frontend-http-cont.service.kjdev"
                    }
                  ]
                }
              ],
              "terminal": true
            }
          ]
        },
        "Cortex": {
          "listen": [
            ":9000"
          ],
          "automatic_https": {
            "disable": true
          },
          "experimental_http3": false,
          "routes": [
            {
              "match": [
                {
                  "path": [
                    "/prometheus/api/v1/push",
                    "/ring",
                    "/all_user_stats",
                    "/api/prom/push",
                    "/api/v1/push"
                  ]
                }
              ],
              "handle": [
                {
                  "handler": "reverse_proxy",
                  "transport": {
                    "protocol": "http"
                  },
                  "upstreams": [
                    {
                      "lookup_srv": "cortex-distributor-http-cont.service.kjdev"
                    }
                  ]
                }
              ],
              "terminal": true
            },
            {
              "match": [
                {
                  "path": [
                    "/api/prom/alertmanager/*",
                    "/api/v1/alerts",
                    "/multitenant_alertmanager/status"
                  ]
                }
              ],
              "handle": [
                {
                  "handler": "reverse_proxy",
                  "transport": {
                    "protocol": "http"
                  },
                  "upstreams": [
                    {
                      "lookup_srv": "cortex-alertmanager-http-cont.service.kjdev"
                    }
                  ]
                }
              ],
              "terminal": true
            },
            {
              "match": [
                {
                  "path": [
                    "/api/v1/rules",
                    "/ruler/ring",
                    "/multitenant_alertmanager/status"
                  ]
                }
              ],
              "handle": [
                {
                  "handler": "reverse_proxy",
                  "transport": {
                    "protocol": "http"
                  },
                  "upstreams": [
                    {
                      "lookup_srv": "cortex-ruler-http-cont.service.kjdev"
                    }
                  ]
                }
              ],
              "terminal": true
            },
            {
              "match": [
                {
                  "path": [
                    "/prometheus/api/v1/read",
                    "/prometheus/api/v1/metadata",
                    "/prometheus/api/v1/labels",
                    "/prometheus/api/v1/series",
                    "/prometheus/api/v1/query_range",
                    "/prometheus/api/v1/query",
                    "/prometheus/api/v1/label/*"
                  ]
                }
              ],
              "handle": [
                {
                  "handler": "reverse_proxy",
                  "transport": {
                    "protocol": "http"
                  },
                  "upstreams": [
                    {
                      "lookup_srv": "cortex-query-frontend-http-cont.service.kjdev"
                    }
                  ]
                }
              ],
              "terminal": true
            }
          ]
        }
      }
    },
    "tls": {
      "automation": {
        "policies": [
          {
            "subjects": [
              "*.kristianjones.dev"
            ],
            "issuers": [
              {
                "module": "acme",
                "challenges": {
                  "dns": {
                    "provider": {
                      "name": "cloudflare",
                      "api_token": "{env.CF_TOKEN}"
                    }
                  }
                }
              }
            ],
            "storage": {
              "module": "consul",
              "address": "172.16.0.10:8500",
              "prefix": "caddytls",
              "token": "${Consul.Token}",
              "aes_key": "${Consul.EncryptionKey}"
            }
          }
        ]
      }
    }
  }
}