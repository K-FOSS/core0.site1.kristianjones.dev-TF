    },
    "tls": {
      "automation": {
        "policies": [
          {
            "subjects": [
              "*.kristianjones.dev",
              "*.int.site1.kristianjones.dev"
            ],
            "issuers": [
              {
                "module": "acme",
                "challenges": {
                  "dns": {
                    "provider": {
                      "name": "cloudflare",
                      "api_token": "${Cloudflare.Token}"
                    }
                  }
                }
              }
            ],
            "storage": {
              "module": "consul",
              "address": "consul.service.kjdev:8500",
              "prefix": "caddytls",
              "token": "${Consul.Token}",
              "aes_key": "${Consul.EncryptionKey}"
            }
          }
        ]
      }
