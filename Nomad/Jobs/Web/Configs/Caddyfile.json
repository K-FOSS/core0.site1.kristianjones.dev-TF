{
  "admin": {
    "listen": "0.0.0.0:2019"
  },
  "storage": {
    "module": "consul",
    "address": "172.16.0.10:8500",
    "prefix": "caddytls",
    "token": "${Consul.Token}",
    "aes_key": "${Consul.EncryptionKey}"
  },
  "apps": {
    "http": {
      "http_port": 8080,
      "https_port": 8443,
      "servers": {
        "CoreWeb": {
          "listen": [
            ":8443"
          ],
          "automatic_https": {
            "disable": false
          },
          "experimental_http3": false,
          "routes": [
            {
              "match": [
                {
                  "host": [
                    "*.kristianjones.dev"
                  ]
                }
              ],
              "handle": [
                {
                  "handler": "subroute",
                  "routes": [
                    {
                      "match": [
                        {
                          "host": [
                            "bitwarden.kristianjones.dev"
                          ]
                        }
                      ],
                      "handle": [
                        {
                          "handler": "reverse_proxy",
                          "transport": {
                            "protocol": "http"
                          },
                          "upstreams": [
                            {
                              "dial": "{{ env "NOMAD_UPSTREAM_ADDR_bitwarden-cont" }}"
                            }
                          ]
                        }
                      ],
                      "terminal": true
                    },
                    {
                      "match": [
                        {
                          "host": [
                            "grafana.kristianjones.dev"
                          ]
                        }
                      ],
                      "handle": [
                        {
                          "handler": "reverse_proxy",
                          "transport": {
                            "protocol": "http"
                          },
                          "upstreams": [
                            {
                              "dial": "{{ env "NOMAD_UPSTREAM_ADDR_grafana-cont" }}"
                            }
                          ]
                        }
                      ],
                      "terminal": true
                    },
                    {
                      "match": [
                        {
                          "host": [
                            "vault.kristianjones.dev"
                          ]
                        }
                      ],
                      "handle": [
                        {
                          "handler": "reverse_proxy",
                          "transport": {
                            "protocol": "http"
                          },
                          "upstreams": [
                            {
                              "dial": "{{ env "NOMAD_UPSTREAM_ADDR_grafana-cont" }}"
                            }
                          ]
                        }
                      ],
                      "terminal": true
                    }
                  ]
                }
              ]
            }
          ]
        }
      }
    },
    "tls": {
      "automation": {
        "policies": [
          {
            "subjects": [
              "*.kristianjones.dev"
            ],
            "issuers": [
              {
                "module": "acme",
                "challenges": {
                  "dns": {
                    "provider": {
                      "name": "cloudflare",
                      "api_token": "{env.CF_TOKEN}"
                    }
                  }
                }
              }
            ],
            "storage": {
              "module": "consul",
              "address": "172.16.0.10:8500",
              "prefix": "caddytls",
              "token": "${Consul.Token}",
              "aes_key": "${Consul.EncryptionKey}"
            }
          }
        ]
      }
    }
  }
}