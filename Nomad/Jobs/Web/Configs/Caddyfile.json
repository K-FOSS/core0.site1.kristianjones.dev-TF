{
  "admin": {
    "listen": "0.0.0.0:2019"
  },
  "storage": {
    "module": "consul",
    "address": "consul.service.dc1.kjdev:8500",
    "prefix": "caddytls",
    "token": "${Consul.Token}",
    "aes_key": "${Consul.EncryptionKey}"
  },
  "apps": {
    "http": {
      "http_port": 8080,
      "https_port": 443,
      "servers": {
        "CoreWeb": {
          "listen": [
            ":443"
          ],
          "automatic_https": {
            "disable": false
          },
          "experimental_http3": true,
          "routes": [
            {
              "match": [
                {
                  "host": [
                    "*.int.site1.kristianjones.dev"
                  ]
                }
              ],
              "handle": [
                {
                  "handler": "encode",
                  "encodings": {
                    "gzip": {}
                  }
                },
                {
                  "handler": "subroute",
                  "routes": [
                    {
                      "match": [
                        {
                          "host": [
                            "auth.int.site1.kristianjones.dev"
                          ]
                        }
                      ],
                      "handle": [
                        {
                          "handler": "reverse_proxy",
                          "transport": {
                            "protocol": "http",
                            "resolver": {
                              "addresses": [
                                "172.16.0.10:8600",
                                "172.16.0.11:8600",
                                "172.16.0.12:8600",
                                "172.16.0.13:8600"
                              ]
                            },
                            "tls": {
                              "server_name": "pomerium-authenticate-cont.service.kjdev",
                              "root_ca_pem_files": [
                                "/local/PomeriumCA.pem"
                              ]
                            }
                          },
                          "upstreams": [
                            {
                              "lookup_srv": "pomerium-authenticate-cont.service.kjdev"
                            }
                          ]
                        }
                      ]
                    },
                    {
                      "match": [
                        {
                          "host": [
                            "*.int.site1.kristianjones.dev"
                          ]
                        }
                      ],
                      "handle": [
                        {
                          "handler": "reverse_proxy",
                          "transport": {
                            "protocol": "http",
                            "resolver": {
                              "addresses": [
                                "172.16.0.10:8600",
                                "172.16.0.11:8600",
                                "172.16.0.12:8600",
                                "172.16.0.13:8600"
                              ]
                            },
                            "tls": {
                              "server_name": "pomerium-proxy-cont.service.kjdev",
                              "root_ca_pem_files": [
                                "/local/PomeriumCA.pem"
                              ]
                            }
                          },
                          "upstreams": [
                            {
                              "lookup_srv": "pomerium-proxy-cont.service.kjdev"
                            }
                          ]
                        }
                      ]
                    }
                  ]
                }
              ]
            },
            {
              "match": [
                {
                  "host": [
                    "*.kristianjones.dev"
                  ]
                }
              ],
              "handle": [
                {
                  "handler": "subroute",
                  "routes": [
                    {
                      "match": [
                        {
                          "host": [
                            "bitwarden.kristianjones.dev"
                          ]
                        }
                      ],
                      "handle": [
                        {
                          "handler": "encode",
                          "encodings": {
                            "gzip": {}
                          }
                        },
                        {
                          "handler": "subroute",
                          "routes": [
                            {
                              "match": [
                                {
                                  "path": [
                                    "/notifications/hub"
                                  ]
                                }
                              ],
                              "handle": [
                                {
                                  "handler": "reverse_proxy",
                                  "transport": {
                                    "protocol": "http",
                                    "resolver": {
                                      "addresses": [
                                        "172.16.0.10:8600",
                                        "172.16.0.11:8600",
                                        "172.16.0.12:8600",
                                        "172.16.0.13:8600"
                                      ]
                                    }
                                  },
                                  "upstreams": [
                                    {
                                      "lookup_srv": "bitwarden-ws-cont.service.kjdev"
                                    }
                                  ]
                                }
                              ]
                            },
                            {
                              "handle": [
                                {
                                  "handler": "reverse_proxy",
                                  "transport": {
                                    "protocol": "http",
                                    "resolver": {
                                      "addresses": [
                                        "172.16.0.10:8600",
                                        "172.16.0.11:8600",
                                        "172.16.0.12:8600",
                                        "172.16.0.13:8600"
                                      ]
                                    }
                                  },
                                  "upstreams": [
                                    {
                                      "lookup_srv": "bitwarden-cont.service.kjdev"
                                    }
                                  ]
                                }
                              ]
                            }
                          ]
                        }
                      ],
                      "terminal": true
                    },
                    {
                      "match": [
                        {
                          "host": [
                            "nextcloud.kristianjones.dev"
                          ]
                        }
                      ],
                      "handle": [
                        {
                          "handler": "reverse_proxy",
                          "transport": {
                            "protocol": "http",
                            "compression": true,
                            "resolver": {
                              "addresses": [
                                "172.16.0.10:8600",
                                "172.16.0.11:8600",
                                "172.16.0.12:8600",
                                "172.16.0.13:8600"
                              ]
                            }
                          },
                          "upstreams": [
                            {
                              "lookup_srv": "nextcloud-web-cont.service.kjdev"
                            }
                          ]
                        }
                      ]
                    },
                    {
                      "match": [
                        {
                          "host": [
                            "auth.kristianjones.dev"
                          ]
                        }
                      ],
                      "handle": [
                        {
                          "handler": "reverse_proxy",
                          "transport": {
                            "protocol": "http",
                            "resolver": {
                              "addresses": [
                                "172.16.0.10:8600",
                                "172.16.0.11:8600",
                                "172.16.0.12:8600",
                                "172.16.0.13:8600"
                              ]
                            }
                          },
                          "upstreams": [
                            {
                              "lookup_srv": "http.authentik.service.dc1.kjdev"
                            }
                          ]
                        }
                      ],
                      "terminal": true
                    }
                  ]
                }
              ]
            }
          ]
        },
        "Loki": {
