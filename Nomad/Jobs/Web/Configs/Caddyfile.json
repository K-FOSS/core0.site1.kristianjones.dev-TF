              ],
              "handle": [
                {
                  "handler": "reverse_proxy",
                  "transport": {
                    "protocol": "http",
                    "compression": true,
                    "resolver": {
                      "addresses": [
                        "172.16.0.10:8600",
                        "172.16.0.11:8600",
                        "172.16.0.12:8600",
                        "172.16.0.13:8600"
                      ]
                    }
                  },
                  "upstreams": [
                    {
                      "lookup_srv": "http.cortex-ruler.service.kjdev"
