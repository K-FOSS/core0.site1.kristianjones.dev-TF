                  "path": [
                    "/api/v1/rules",
                    "/api/v1/rules/*",
                    "/ruler/ring",
                    "/ruler/rule_groups",
                    "/multitenant_alertmanager/status",
                    "/prometheus/api/v1/rules",
                    "/prometheus/api/v1/alerts",
                    "/ruler/delete_tenant_config",
                    "/prometheus/rules",
                    "/api/prom/rules",
                    "/api/prom/api/v1/alerts",
                    "/api/prom/api/v1/rules"
