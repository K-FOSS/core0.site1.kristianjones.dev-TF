                        "172.16.0.13:8600"
                      ]
                    }
                  },
                  "upstreams": [
                    {
                      "lookup_srv": "http.loki-query-frontend.service.kjdev"
                    }
                  ]
                }
              ],
              "terminal": true
            },
            {
              "match": [
                {
                  "path": [
                    "/ruler/ring",
                    "/loki/api/v1/rules",
                    "/loki/api/v1/rules/*",
                    "/api/prom/rules",
                    "/api/prom/rules/*",
                    "/prometheus/api/v1/rules",
                    "/prometheus/api/v1/alerts"
                  ]
                }
              ],
              "handle": [
                {
                  "handler": "reverse_proxy",
                  "transport": {
                    "protocol": "http",
                    "compression": true,
                    "resolver": {
                      "addresses": [
                        "172.16.0.10:8600",
                        "172.16.0.11:8600",
                        "172.16.0.12:8600",
                        "172.16.0.13:8600"
                      ]
                    }
                  },
                  "upstreams": [
                    {
                      "lookup_srv": "http.loki-ruler.service.kjdev"
                    }
                  ]
                }
              ],
              "terminal": true
            }
          ]
        },
