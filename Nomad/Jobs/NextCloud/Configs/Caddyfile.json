{
  "admin": {
    "listen": "0.0.0.0:2019"
  },
  "apps": {
    "http": {
      "http_port": 8080,
      "https_port": 8443,
      "servers": {
        "CoreWeb": {
          "listen": [
            ":8080"
          ],
          "idle_timeout": 65,
          "automatic_https": {
            "disable": true
          },
          "experimental_http3": false,
          "allow_h2c": true,
          "routes": [
            {
              "handle": [
                {
                  "handler": "headers",
                  "response": {
                    "deferred": true,
                    "set": {
                      "Cache-Control": [
                        "max-age=15552000"
                      ]
                    }
                  }
                }
              ],
              "match": [
                {
                  "path_regexp": {
                    "pattern": "\\.(?:css|js|svg|gif)$"
                  }
                }
              ]
            },
            {
              "handle": [
                {
                  "handler": "headers",
                  "response": {
                    "set": {
                      "Strict-Transport-Security": [
                        "max-age=15552000"
                      ],
                      "Referrer-Policy": [],
                      "X-Content-Type-Options": [],
                      "X-Download-Options": [],
                      "X-Frame-Options": [
                        "SAMEORIGIN"
                      ]
                    }
                  }
                },
                {
                  "handler": "vars",
                  "root": "/var/www/html"
                }
              ]
            },
            {
              "match": [
                {
                  "path": [
                    "/.well-known/carddav",
                    "/.well-known/caldav"
                  ]
                }
              ],
              "handle": [
                {
                  "handler": "static_response",
                  "headers": {
                    "Location": [
                      "/remote.php/dav"
                    ]
                  },
                  "status_code": 301
                }
              ]
            },
            {
              "match": [
                {
                  "path": [
                    "/.htaccess",
                    "/data/*",
                    "/config/*",
                    "/db_structure",
                    "/.xml",
                    "/README",
                    "/3rdparty/*",
                    "/lib/*",
                    "/templates/*",
                    "/occ",
                    "/console.php"
                  ]
                }
              ],
              "handle": [
                {
                  "handler": "static_response",
                  "status_code": 404
                }
              ],
              "terminal": true
            },
            {
              "handle": [
                {
                  "handler": "subroute",
                  "routes": [
                    {
                      "match": [
                        {
                          "file": {
                            "try_files": [
                              "{http.request.uri.path}/index.php"
                            ]
                          },
                          "not": [
                            {
                              "path": [
                                "*/"
                              ]
                            }
                          ]
                        }
                      ],
                      "handle": [
                        {
                          "handler": "static_response",
                          "headers": {
                            "Location": [
                              "{http.request.uri.path}/"
                            ]
                          },
                          "status_code": 308
                        }
                      ]
                    },
                    {
                      "match": [
                        {
                          "file": {
                            "try_files": [
                              "{http.request.uri.path}",
                              "{http.request.uri.path}/index.php",
                              "index.php"
                            ],
                            "split_path": [
                              ".php"
                            ]
                          }
                        }
                      ],
                      "handle": [
                        {
                          "handler": "rewrite",
                          "uri": "{http.matchers.file.relative}"
                        }
                      ]
                    },
                    {
                      "match": [
                        {
                          "path": [
                            "*.php"
                          ]
                        }
                      ],
                      "handle": [
                        {
                          "handler": "reverse_proxy",
                          "transport": {
                            "protocol": "fastcgi",
                            "split_path": [
                              ".php"
                            ]
                          },
                          "upstreams": [
                            {
                              "lookup_srv": "nextcloud-fastcgi-cont.service.kjdev"
                            }
                          ]
                        }
                      ]
                    }
                  ]
                }
              ],
              "terminal": true
            },
            {
              "handle": [
                {
                  "handler": "file_server",
                  "hide": [
                    "Caddyfile"
                  ],
                  "root": "/var/www/html",
                  "precompressed": {
                    "gzip": {}
                  }
                }
              ]
            }
          ]
        }
      }
    }
  }
}