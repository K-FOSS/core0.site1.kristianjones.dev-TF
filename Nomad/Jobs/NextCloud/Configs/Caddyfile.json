{
  "admin": {
    "listen": "0.0.0.0:2019"
  },
  "apps": {
    "http": {
      "http_port": 8080,
      "https_port": 8443,
      "servers": {
        "CoreWeb": {
          "listen": [
            ":{{ env "NOMAD_PORT_http" }}"
          ],
          "automatic_https": {
            "disable": true
          },
          "experimental_http3": false,
          "routes": [
            {
              "handle": [
                {
                  "handler": "vars",
                  "root": "/var/www/html"
                },
                {
                  "handler": "subroute",
                  "routes": [
                    {
                      "match": [
                        {
                          "path": [
                            "/.well-known/carddav"
                          ]
                        }
                      ],
                      "handle": [
                        {
                          "handler": "static_response",
                          "headers": {
                            "Location": [
                              "/remote.php/dav"
                            ]
                          },
                          "status_code": 301
                        }
                      ]
                    },
                    {
                      "match": [
                        {
                          "path": [
                            "/.well-known/caldav"
                          ]
                        }
                      ],
                      "handle": [
                        {
                          "handler": "static_response",
                          "headers": {
                            "Location": [
                              "/remote.php/dav"
                            ]
                          },
                          "status_code": 301
                        }
                      ]
                    },
                    {
                      "match": [
                        {
                          "path": [
                            "/.htaccess",
                            "/data/*",
                            "/config/*",
                            "/db_structure",
                            "/.xml",
                            "/README",
                            "/3rdparty/*",
                            "/lib/*",
                            "/templates/*",
                            "/occ",
                            "/console.php"
                          ]
                        }
                      ],
                      "handle": [
                        {
                          "handler": "static_response",
                          "status_code": 404
                        }
                      ]
                    },
                    {
                      "match": [
                        {
                          "file": {
                            "try_files": [
                              "{http.request.uri.path}/index.php"
                            ]
                          },
                          "not": [
                            {
                              "path": [
                                "*/"
                              ]
                            }
                          ]
                        }
                      ],
                      "handle": [
                        {
                          "handler": "static_response",
                          "headers": {
                            "Location": [
                              "{http.request.uri.path}/"
                            ]
                          },
                          "status_code": 308
                        }
                      ]
                    },
                    {
                      "match": [
                        {
                          "file": {
                            "try_files": [
                              "{http.request.uri.path}",
                              "{http.request.uri.path}/index.php",
                              "index.php"
                            ],
                            "split_path": [
                              ".php"
                            ]
                          }
                        }
                      ],
                      "handle": [
                        {
                          "handler": "rewrite",
                          "uri": "{http.matchers.file.relative}"
                        }
                      ]
                    },
                    {
                      "handle": [
                        {
                          "handler": "reverse_proxy",
                          "transport": {
                            "protocol": "fastcgi",
                            "split_path": [
                              ".php"
                            ]
                          },
                          "upstreams": [
                            {
                              "lookup_srv": "nextcloud-fastcgi-cont.service.kjdev"
                            }
                          ]
                        }
                      ]
                    },
                    {
                      "handle": [
                        {
                          "handler": "file_server",
                          "hide": [
                            "Caddyfile"
                          ]
                        }
                      ]
                    }
                  ]
                }
              ]
            }
          ]
        }
      }
    }
  }
}