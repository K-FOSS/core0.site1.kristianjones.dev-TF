{
  "admin": {
    "listen": "0.0.0.0:2019"
  },
  "apps": {
    "http": {
      "http_port": 8080,
      "https_port": 8443,
      "servers": {
        "CoreWeb": {
          "listen": [
            ":8080"
          ],
          "automatic_https": {
            "disable": false
          },
          "experimental_http3": false,
          "routes": [
            {
              "handle": [
                {
                  "handler": "vars",
                  "root": "/var/www/html"
                },
                {
                  "handler": "subroute",
                  "routes": [
                    {
                      "handle": [
                        {
                          "body": "/remote.php/dav/",
                          "close": true,
                          "handler": "static_response",
                          "status_code": 301
                        }
                      ],
                      "match": [
                        {
                          "path": [
                            "/.well-known/caldav",
                            "/.well-known/carddav"
                          ]
                        }
                      ]
                    },
                    {
                      "handle": [
                        {
                          "handler": "reverse_proxy",
                          "transport": {
                            "protocol": "fastcgi",
                            "env": {
                              "front_controller_active": "true"
                            }
                          },
                          "upstreams": [
                            {
                              "lookup_srv": "nextcloud-fastcgi-cont.service.kjdev"
                            }
                          ]
                        }
                      ],
                      "match": [
                        {
                          "path": [
                            "*.php"
                          ]
                        }
                      ]
                    },
                    {
                      "handle": [
                        {
                          "handler": "file_server",
                          "hide": [
                            "Caddyfile"
                          ]
                        }
                      ]
                    }
                  ]
                }
              ]
            }
          ]
        }
      }
    }
  }
}